<?xml version="1.0" encoding="ISO-8859-1" ?>

<configdata>
	<properties>
		<property name="version" data="1.3" />
	</properties>

	<development charset="utf8">
		<database use="0">
			<dateFormat>YYYY-MM-dd HH:mm:ss</dateFormat>
			<adapter>mysqli</adapter>
			<params>
				<host>localhost</host>
				<username>root</username>
				<password></password>
				<dbname>mysql</dbname>
			</params>
		</database>

		<cache>
			<dir value="../application/common/cache" />
			<lifetime value="10" />
		</cache>

		<debug>
			<logical value="1" />
			<output value="1" />
			<error_reporting value="6143 | 2048" />
		</debug>

		<doctype value="XHTML1_STRICT" />

		<ini_set>
			<arg_separator.output value="&amp;" />
			<display_startup_errors value="true" />
			<display_errors value="true" />
			<session.use_trans_sid value="false" />
		</ini_set>

		<i18n>
			<default abbreviate="en_CA" full="English" />
			<!--
				you can add as many <supported> tags as you want, with
				the same syntax as the <default> tag
			-->
		</i18n>

		<layout use="1">
			<layoutPath value="../application/common/layouts" />
			<defaultLayoutName value="default" />
		</layout>

		<!-- Plugins FIXME: STILL MAJORLY BUGGED -->
		<plugins>
			<plugin name="i18n" enabled="0" />
		</plugins>

		<links autoDetectHost="0">
			<library value="/lib${version}/public" />
			<!-- <library value="http://static.local" /> -->
		</links>

		<session value="global" />

		<timezone value="America/Montreal" />
	</development>
</configdata>