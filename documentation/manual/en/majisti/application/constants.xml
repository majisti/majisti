                <!-- MAJISTI_URL -->
                <row>
                    <entry>MAJISTI_URL</entry>
                    <entry>URL leading to the library's majisti folder.
                        Generally located at static.hostname.com/majisti. </entry>
                    <entry>MAJ_URL</entry>
                </row>

                <!-- MAJISTI_URL_STYLES -->
                <row>
                    <entry>MAJISTI_URL_STYLES</entry>
                    <entry>URL leading to Majisti's styles folder. Generally
                        located at static.hostname.com/majisti/styles.</entry>
                    <entry>MAJ_STYLES</entry>
                </row>
                
                <!-- MAJISTI_URL_SCRIPTS -->
                <row>
                    <entry>MAJISTI_URL_SCRIPTS</entry>
                    <entry>URL leading to Majisti's scripts folder. Generally
                        located at static.hostname.com/majisti/scripts.</entry>
                    <entry>MAJ_SCRIPTS</entry>
                </row>
                
                <!-- MAJISTI_URL_IMAGES -->
                <row>
                    <entry>MAJISTI_URL_IMAGES</entry>
                    <entry>URL leading to Majisti's common images folder.
                        Generally located at
                        static.hostname.com/majisti/images/common . </entry>
                    <entry>MAJ_IMG</entry>
                </row>
                <row>
                    <entry>MAJISTI_URL_IMAGES_LOCALE</entry>
                    <entry>URL leading to Majisti's current locale images
                        folder. Generally located at
                        static.hostname.com/majisti/images/current-locale.</entry>
                    <entry>MAJ_IMG_LOC</entry>
                </row>
                <row>
                    <entry>MAJISTIX_MODULES</entry>
                    <entry>/absolute/path/to/Majisti/library/Majistix/Modules</entry>
                    <entry>MAJX_MOD</entry>
                </row>
                <row>
                    <entry>MAJISTIX_PATH</entry>
                    <entry>/absolute/path/to/Majisti/library/MajistiX</entry>
                    <entry>MAJX_PATH</entry>
                </row>
                <row>
                    <entry>MAJISTIX_URL_IMAGES</entry>
                    <entry>URL leading to MajistiX' images folder. Generally
                        located at
                        static.hostname.com/majistix/images/common.</entry>
                    <entry>MAJX_IMG</entry>
                </row>
                <row>
                    <entry>MAJISTIX_URL_SCRIPTS</entry>
                    <entry>URL leading to MajistiX' scripts folder. Generally
                        located at
                        static.hostname.com/majistix/scripts.</entry>
                    <entry>MAJX_SCRIPTS</entry>
                </row>
                
                <!-- MAJISTIX_URL_STYLES -->
                <row>
                    <entry>MAJISTIX_URL_STYLES</entry>
                    <entry>URL leading to MajistiX' styles folder. Generally
                        located at static.hostname.com/majistix/styles.</entry>
                    <entry>MAJX_STYLES</entry>
                </row>
                
